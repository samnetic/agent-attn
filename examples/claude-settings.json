{
  "hooks": {
    "Notification": [
      {
        "matcher": "permission_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "~/.local/bin/agent-attn --latch --window 'claude-main' --app 'Claude Code' --event 'permission_prompt' --message 'Approval needed'"
          }
        ]
      },
      {
        "matcher": "idle_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "~/.local/bin/agent-attn --app 'Claude Code' --event 'idle_prompt' --message 'Claude is waiting for input'"
          }
        ]
      }
    ]
  }
}
